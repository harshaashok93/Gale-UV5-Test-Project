.our-story-hero-panel
    .our-story
        padding-left 0px
        padding-right 0px

        .featured_text
            margin-bottom 0px
            @media screen and (max-width $screen-xs-max)
                box-shadow none

            .image-block

                @media screen and (min-width $screen-md-min)
                    min-height 380px
                    max-height 540px
                    overflow hidden
                img
                    width 100%
            .richtext
                position absolute
                @media screen and (max-width $screen-xs-max)
                    position static

                @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                    position relative

                .rich-text
                    width 502px
                    height 305px
                    background-color $white
                    box-shadow 0 2px 4px 0 rgba(199, 199, 199, 0.5)
                    border-top 5px solid $live-green-light
                    border-radius 0px 10px 0px 10px
                    margin 76px 0px 97px 120px
                    text-align left
                    padding-left 18px
                    @media screen and (max-width $screen-xs-max)
                        margin 0
                        width  100%
                        height auto
                        border-radius 0px 30px 0px 30px
                    @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                        height auto
                        width 100%
                        margin 0

                    h1
                        //width 429px
                        font-weight $font300
                        font-size $h2
                        font-style normal
                        line-height 1
                        color #185f4d
                        display inline-block
                        margin-top 30px
                        margin-left 16px
                        margin-right 34px
                        margin-bottom 10px
                        @media screen and (max-width $screen-xs-max)
                            width auto
                            font-size $h5

                    p
                        display inline-block
                        //width 429px
                        font-size $mobile-h4
                        font-weight normal
                        line-height 1.6
                        color $dark-grey
                        margin-left 18px
                        margin-right 34px
                        margin-bottom 22px
                        @media screen and (max-width $screen-xs-max)
                            width auto

.text-content
    background-image url('/static/img/Background_News2x.jpg')
    background-size cover

    .our-history
        padding-right 120px
        padding-left 120px
        padding-top 64px
        @media screen and (max-width $screen-sm-max)
            padding 0
            font-size 46px
        @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
            font-size $h2

        .richtext
            .rich-text
                h1
                    margin-top 0px
                    float left
                    width 40%
                    margin-bottom 0px
                    font-size 82px
                    color #185f4d
                    font-style italic
                    @media screen and (max-width $screen-sm-max)
                        font-size 46px
                        float none
                        display block
                        text-align center
                        width auto
                        margin 20px 0
                    @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                        font-size $h2
                        margin-top 60px
                    @media screen and (min-width 768px) and (max-width 990px)
                        padding-top 40px


                    br
                        @media screen and (max-width $screen-sm-max)
                            display none
                p
                    float right
                    width 60%
                    margin-top 0px
                    margin-bottom 0px
                    font-size $mobile-h4
                    line-height 1.6
                    color $dark-grey
                    @media screen and (max-width $screen-sm-max)
                        float none
                        width 90%
                        font-size $mobile-h5
                        display block
                        margin auto
                    @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                        font-size $mobile-h4

                ul
                    font-size $CTA-copy
                    float right
                    width 60%
                    line-height 1.6
                    margin-top 20px
                    @media screen and (max-width $screen-sm-max)
                        width auto
                        font-size $mobile-h5
                        margin 20px 10px
                     @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                        font-size $mobile-h4
                        margin-right 30px
        &:after
            position: absolute;
            display: block;
            content: "";
            top: 109%;
            background: black;
            width: 87%;
            height: 1px;

            @media screen and (max-width $screen-sm-max)
                display none

    .why-choose
        padding-right 120px
        padding-left 120px
        padding-top 76px
        margin-bottom 20px
        @media screen and (max-width $screen-sm-max)
            padding 0

        .richtext
            .rich-text
                h1
                    margin-top 0px
                    float right
                    width 40%
                    text-align right
                    font-size 82px
                    color #185f4d
                    font-style italic
                    @media screen and (max-width $screen-sm-max)
                        width auto
                        float none
                        display block
                        font-size 46px
                        text-align center
                        padding 0
                        margin-top 60px
                        margin-bottom 30px
                    @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                        font-size $h2

                    br
                        @media screen and (max-width $screen-sm-max)
                            display none

                img
                    float right
                    @media screen and (max-width $screen-sm-max)
                        float none
                        margin 0 auto

                img
                    max-width 280px
                    @media screen and (max-width $screen-xs-max)
                        width 180px
                        margin auto

                p
                    margin-top 0px
                    float left
                    width 60%
                    text-align left
                    margin-bottom 0px
                    font-size $mobile-h4
                    line-height 1.6
                    color $dark-grey
                    @media screen and (max-width $screen-sm-max)
                        width 90%
                        display block
                        margin auto
                        float none

                h4
                    float right
                    // width 317px
                    position relative
                    left 7px

                    img
                        width 317px


//divider line
.divider-line
    &:after
        @media screen and (max-width $screen-sm-max)
            content ""
            width 95%
            margin auto
            display block
            border-bottom solid 1px $live-green
