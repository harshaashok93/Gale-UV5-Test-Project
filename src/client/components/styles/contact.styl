    .rich-text
        margin 0
        margin-left 318px
        padding-top 24px
        font-weight normal
        font-style normal
        font-stretch normal
        font-family $Raleway



.contact-mail-details
    .rich-text
            margin 0
            margin-left 118px
            padding-top 24px
            font-weight normal
            font-style normal
