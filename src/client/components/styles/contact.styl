            font-family $Raleway

.contact-form
    @media screen and (max-width $screen-xs-max)
        width 80%
        margin auto
    .contact-form-content
    form .form-group
        @media screen and (max-width $screen-xs-max)
            padding 0


.contact-form-header
    @media screen and (max-width $screen-xs-max)
        padding 0
    .rich-text
        h3
            margin 0
            padding-top 60px
            font-size $h3
            font-family $Raleway
            font-weight normal
            font-style normal
            font-stretch normal
            color $live-green
            padding-bottom 36px
            @media screen and (max-width $screen-xs-max)
                font-size $h6
                padding-top 20px
        p
            font-family $Raleway
            font-size 18px
            font-weight $font300
            font-style normal
            font-stretch normal
            color $dark-grey
            margin 0
            //margin-left 223px
            padding-bottom: 17px
            width 65%
            margin auto
            @media screen and (max-width $screen-sm-max)
                //margin-left 0px
                font-size $mobile-h6
.contact-form-content
    float none
    margin 0 auto
    clear both
    .contact-form-panel
        .form-group
            label
                font-size $small-sub-heading
                font-family $Raleway
                font-weight $font300
                @media screen and (max-width $screen-xs-max)
                    font-size $mobile-h6
            input
                border-radius 4px
                font-family $Raleway
                border-color $light-grey
                height 45px
                font-size $CTA-copy
                @media screen and (max-width $screen-sm-max)
                    background none
            select
                border-color $light-grey
                height 45px
                font-family $Raleway
                font-size $CTA-copy
                @media screen and (max-width $screen-sm-max)
                    background none
                    font-size $mobile-h6

            textarea
                border-color $light-grey
                height 173px
                font-size $CTA-copy
                @media screen and (max-width $screen-sm-max)
                    background none
                    height 200px

            .select2-container--default
                .select2-selection--single
                    line-height 45px
                    font-size $CTA-copy
                    height auto
                    padding 10px 30px
                    color $dark-grey
                    &[aria-activedescendant]
                        padding-left 30px
                    .select2-selection__placeholder
                        color $dark-grey

                    .select2-selection__arrow
                            background url("/static/img/DropDown_Arrows_large@2x.png") no-repeat
                            background-size cover
                            width 12px
                            height 25px
                            top 22%
                            right 5%

                        b
                            display none

                .select2-results
                    .select2-results__options
                        li
                            padding-left 30px
                            line-height 35px
                            font-size $CTA-copy


        .fieldset-container
            clear both
            fieldset
                background transparent
                margin-bottom 0
            legend
                font-family $Raleway
                color $live-green
                text-align center
                font-size $h3
                border none
                margin-bottom 0
                @media screen and (max-width $screen-xs-max)
                    font-size $small-sub-heading

::-webkit-input-placeholder  /* WebKit browsers */
    opacity 0

:-moz-placeholder  /* Mozilla Firefox 4 to 18 */
    opacity 0

::-moz-placeholder  /* Mozilla Firefox 19+ */
    opacity 0

.form-control::-moz-placeholder /* mozilla firefox */
    color transparent

:-ms-input-placeholder  /* Internet Explorer 10+ */
    opacity 1

:-ms-input-placeholder.form-control /* Internet explorer  */
    color transparent

textarea::-webkit-input-placeholder  /* WebKit browsers */
    color transparent

textarea:-moz-placeholder  /* Mozilla Firefox 4 to 18 */
    color transparent

textarea::-moz-placeholder  /* Mozilla Firefox 19+ */
    color transparent

textarea:-ms-input-placeholder  /* Internet Explorer 10+ */
    color transparent
.form-submit-button-container
    clear both
    text-align center
    .btn
        button-1()
        width 220px
        line-height normal

.has-error
    label
        font-size $small-sub-heading !important
        font-weight $font400 !important
        color $error-color !important

    input
        border 2px solid $error-color !important

    .with-errors
        li
            color $error-color !important
            font-size $small-CTA-copy !important

