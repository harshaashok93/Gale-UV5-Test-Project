.contact-header
    background url(/static/img/Wood_texture_banner@2x.png) no-repeat center center
    background-size 100%
    padding 27px 15px
    margin-bottom 43px
    @media screen and (max-width $screen-xs-max)
        background-size cover
    h1
        font-size $h2
        font-weight $font300
        font-family $Raleway
        font-style normal
        font-stretch normal
        text-align center
        color #185f4d
        margin 0
        @media screen and (max-width $screen-sm-max)
            font-size $mobile-h2

.contact-form
    background url(/static/img/GreenLeaves_BottomRight.png) no-repeat
    background-size 21%
    padding-bottom 152px
    background-position right -22px bottom -51px
    @media screen and (max-width $screen-xs-max)
        background none
        position relative
        &:after
            background url(/static/img/GreenLeaves_BottomRight.png) no-repeat
            background-size 100%
            content ""
            width 250px
            height 180px
            position absolute
            bottom 0
            right -24%
            z-index -1


    @media screen and (min-width $screen-xs-max) and (max-width $screen-sm-max)
        background-size 55%
        padding-bottom 152px
        background-position right -55px bottom -87px
        margin 0
.contact-top-content
    float none
    margin 0 auto
    clear both
    box-shadow 0 5px 12px 0 rgba(0, 0, 0, 0.3)
    height 335px
    //max-width 1020px
    @media screen and (max-width $screen-xs-max)
        height 556px
        //width 310px
        width 90%
        box-shadow 0 0px 20px 0 rgba(0, 0, 0, 0.3)
    @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
        width 93%

    .richtext:nth-child(1)
        float left
        width 100%
        p
            font-family $Raleway
            font-weight normal
            font-style normal
            font-stretch normal
            font-size $h3
            color $dark-grey
            margin 0
            line-height 1.9

            @media screen and (max-width $screen-xs-max)
                font-size $content-title
                font-family $Raleway
                font-weight normal
                font-style normal
                font-stretch normal
    h3
        color $live-green
        margin-bottom 0
        &+p
            display none
    .rich-text
        p
            margin-bottom 0
            line-height 1.6
            font-size $CTA-copy



    .richtext:nth-child(2)
        float left
        width 43%
        margin-left 7%
        font-family $Raleway
        @media screen and (max-width $screen-xs-max)
            width 100%
            margin-left 0
            text-align center
        @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
            width 38%
            margin-left 3%
        @media screen and (min-width 991px) and (max-width 1024px)
            margin-left 3%

        h3
            display inline-block
            width 100%
            font-family $Raleway
            background url(/static/img/icone_telephone.png) no-repeat left -7px top -4px
            background-size 58px
            padding 8px 0 10px 62px
            margin-left -10px
            @media screen and (max-width $screen-xs-max)
                padding 9px 0 9px 22px
                background-position-x 25%
                background-position-y 20%
                background-size 45px
                    margin 0
        p
            display inline-block
            width 100%
            margin-left 52px
            @media screen and (max-width $screen-xs-max)
                margin-left 0



    .richtext:nth-child(3)
        float right
        width 43%
        margin-left 7%
        font-family $Raleway
        @media screen and (max-width $screen-xs-max)
            width 100%
            text-align center
            margin-left 0
        @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
            width 53%
            margin-left 1%
        @media screen and (min-width 991px) and (max-width 1024px)
            margin-left 0
            width 48%
            float right
            margin-left -1%
        h3
            display inline-block
            width 100%
            font-family $Raleway
            background url(/static/img/post.png) no-repeat left -5px top -8px
            background-size 62px
            padding 8px 0 10px 65px
            margin-left -10px
            @media screen and (max-width $screen-xs-max)
                padding 9px 0 9px 22px
                background-size 45px
                background-position-x 25%
                background-position-y 20%
        p
            display inline-block
            width 100%
            margin-left 56px
            @media screen and (max-width $screen-xs-max)
                margin-left 0


