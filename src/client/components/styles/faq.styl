.faq-page

    .faq-header-content
        background url(/static/img/legal-notice-header-bg.png)
        background-size 100%
        padding 27px 15px
        h1
            font-size $h2
            font-weight $font300
            font-family $Raleway
            font-style normal
            font-stretch normal
            text-align center
            color #185f4d
            margin 0
            @media screen and (max-width $screen-xs-max)
                font-size $mobile-h2

    .faq-top-content
        float none
        display block
        clear both
        max-width 1020px
        padding 32px 0 10px 0
        margin 0 20px
        width auto
        border-bottom 1px solid #185346

        @media screen and (min-width $screen-xs)
            margin 0 35px

        @media screen and (min-width $screen-sm)
            width 80%
            max-width 1016px
            margin 0 auto
            padding-bottom 30px

        p
            font-family $Raleway
            font-size $CTA-copy
            font-weight $font300
            font-style normal
            font-stretch normal
            line-height 1.8
            text-align center
            color $dark-grey

            @media screen  and (max-width $screen-xs-max)
                font-size $small-CTA-copy
                line-height 1.56

    .faq-section
        background url(/static/img/GreenLeaves_BottomRight.png) no-repeat
        background-size 260px
        background-position right -30px bottom -44px
        padding-bottom 121px
        @media screen and (max-width $screen-sm-max)
            background-size 235px
            background-position right -11px bottom -68px
            padding-top 0

        .faq-center-content
            float none
            margin 0 auto
            clear both
            max-width 1020px
            padding 0 20px

            @media screen and (min-width $screen-xs)
                padding 0 35px

            @media screen and (min-width $screen-sm)
                width 80%
                max-width 1016px
                padding 0

            .panel-body

                a.main-title
                    padding 0

        .main-group
            background none
            margin 0
            padding 0

            .panel-default
                border none
                box-shadow none
                background none
                margin 0
                padding 0
                @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                    margin-bottom 0
                @media screen and (min-width $screen-md-min)
                    margin-bottom 0

                .panel-heading
                    padding 25px 0
                    margin 0
                    background none

                    @media screen and (max-width $screen-xs-max)
                        padding-left 0

                    &:before
                        background none

                    .panel-title
                        font-size 40px
                        font-family $Raleway
                        font-weight $font300
                        line-height 1.8
                        color $live-green
                        display block

                        @media screen and (max-width $screen-xs-max)
                            font-size $mobile-h3
                            line-height 0.9

                        a
                            display block
                            position relative
                            z-index 1
                            padding-right 60px
                            &:after
                                content ''
                                display block
                                width 40px
                                height 40px
                                position absolute
                                right 0
                                top 50%
                                transform translateY(-50%)
                                border-radius 100%
                                border 1px solid $live-green

                        img.unchained-accordion-img
                            width 28px
                            position absolute
                            top 50%
                            transform translateY(-50%)
                            right 6px
                            max-width none
                            float none

            .main-collapse

                .panel-body
                    padding 0

                    &:last-child
                        padding-bottom 20px

                    &:first-child

                        div.panel-heading
                            padding-top 0

                    .sub-group
                        margin 0

                        .panel-heading
                            padding 15px 0


                        .panel-title

                            &:after
                                left 23px
                                top 14px
                                @media screen and (max-width $screen-xs-max)
                                    left 0
                                    width 40px
                                    height 40px
                                @media screen and (min-width $screen-sm-min) and (max-width $screen-sm-max)
                                    top 12px

                            .question-block
                                color $dark-grey
                                font-size $small-sub-heading
                                line-height 1.2
                                @media screen and (max-width $screen-xs-max)
                                    padding-left 15px
                                    width 82.7%
                                    font-size $mobile-h4
                                    color $dark-grey

                                @media screen and (min-width $screen-sm)
                                    padding-left 20px

                                @media screen and (min-width $screen-md)
                                    padding-left 30px

                            a
                                display flex
                                flex-direction row
                                justify-content flex-start
                                align-items center
                                padding 0

                                @media screen and (min-width $screen-md)
                                    padding-left 50px

                                &:after
                                    display none

                                // The expand/collapse icon - default styles
                                i.glyphicon
                                    width 40px
                                    height 40px
                                    border 1px solid $live-green
                                    border-radius 50%
                                    margin 0
                                    background-color $white
                                    background-repeat no-repeat
                                    background-size 65%
                                    background-position center center
                                    flex-grow 0
                                    flex-shrink 0

                                // The plus ( + ) icon
                                i.glyphicon-plus
                                    background-image url(/static/img/Plus_Expand_DarkGreen@2x.png)

                                    // Delete any default icon
                                    &:before
                                        content ''

                                // The minus ( - ) icon
                                i.glyphicon-minus
                                    background-image url(/static/img/Minus_Contract_DarkGreen@2x.png)

                                    // Delete any default icon
                                    &:before
                                        content ''

                        .answer-block
                            padding 5px 0 0 0
                            margin 0

                            @media screen and (max-width $screen-xs-max)
                                padding-left 0px

                            @media screen and (min-width $screen-md)
                                padding-left 120px

                            .rich-text
                                p, ul, ol, li, a, span
                                    text-indent 0px
                                    font-size $CTA-copy
                                    @media screen and (max-width $screen-xs-max)
                                        font-size $mobile-h5

        .panel-body
            padding 0px
            border-bottom 1px solid $live-green

        .panel-group
            .panel-heading+
                .panel-collapse>
                    .panel-body
                        border none

    .panel-title a[aria-expanded=true]
        font-weight $font300 !important
