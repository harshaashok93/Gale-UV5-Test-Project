body
    font-family font-roboto

.product-listing
    margin-top 30px

    .categories-list
        text-align center

        ul
            padding 0
            margin 0
            list-style none

            li
                display inline-block
                padding 20px 50px
                cursor pointer
                position relative

                &.selected
                    color #0a6070
                    font-weight font-normal

                    &:after
                        content ''
                        display block
                        width 22px
                        height 22px
                        position absolute
                        bottom -12px
                        left 0
                        right 0px
                        background-color $category-title
                        margin 0 auto
                        border 6px solid  $category-title
                        border-right 0
                        border-top 0
                        background-color #fff
                        transform rotate(135deg)

    .products
        padding 30px
        background #fff
        box-shadow 0px 3px 12px #ccc
        border-top 6px solid  $category-title

        @media screen and (min-width 1025px)
            min-height 555px
            height auto

        .product-info
            border 0px
            margin 0 0 40px 0
            float left
